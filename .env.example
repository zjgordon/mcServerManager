# Minecraft Server Manager - Environment Configuration Template
# Copy this file to .env and customize the values for your environment
# Never commit the actual .env file to version control!

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Secret key for Flask session management and CSRF protection
# Generate a secure random key: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your_secret_key_here_replace_with_32_byte_hex_string

# Database connection string
# SQLite (default): sqlite:///minecraft_manager.db
# PostgreSQL: postgresql://username:password@localhost/database_name
# MySQL: mysql://username:password@localhost/database_name
DATABASE_URL=sqlite:///minecraft_manager.db

# =============================================================================
# FLASK APPLICATION CONFIGURATION
# =============================================================================

# Flask environment mode (development, production, testing)
FLASK_ENV=development

# Enable Flask debug mode (True/False)
FLASK_DEBUG=True

# Flask application port (used by dev.sh script)
FLASK_RUN_PORT=5000

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application title displayed in the web interface
APP_TITLE="Minecraft Server Manager"

# Server hostname for external access
SERVER_HOSTNAME=localhost

# Admin username for the initial admin account
ADMIN_USERNAME=admin

# =============================================================================
# SECURITY & SESSION CONFIGURATION
# =============================================================================

# Enable secure cookies for HTTPS (True/False)
# Set to True in production with HTTPS
SESSION_COOKIE_SECURE=False

# API key for status check endpoint (change from default)
STATUS_CHECK_API_KEY=your_api_key_here_change_from_default

# =============================================================================
# MEMORY MANAGEMENT CONFIGURATION
# =============================================================================

# Maximum total memory available for all Minecraft servers (in MB)
# Default: 8192 (8GB)
MAX_TOTAL_MEMORY_MB=8192

# Default memory allocation per Minecraft server (in MB)
# Default: 1024 (1GB)
DEFAULT_SERVER_MEMORY_MB=1024

# Minimum memory allocation per Minecraft server (in MB)
# Default: 512 (512MB)
MIN_SERVER_MEMORY_MB=512

# Maximum memory allocation per Minecraft server (in MB)
# Default: 4096 (4GB)
MAX_SERVER_MEMORY_MB=4096

# =============================================================================
# SETUP INSTRUCTIONS
# =============================================================================
# 1. Copy this file to .env: cp .env.example .env
# 2. Generate a secure SECRET_KEY using Python:
#    python -c "import secrets; print(secrets.token_hex(32))"
# 3. Update DATABASE_URL if using PostgreSQL or MySQL
# 4. Set SESSION_COOKIE_SECURE=True in production with HTTPS
# 5. Change STATUS_CHECK_API_KEY to a secure random string
# 6. Adjust memory settings based on your server's capabilities
# 7. Update APP_TITLE and SERVER_HOSTNAME as needed
